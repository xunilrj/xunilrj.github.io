---
import IndexHeader from '../components/IndexHeader.jsx';
import IndexFooter from '../components/IndexFooter.jsx';
import ScrollingBackground from '../components/ScrollingBackground.astro';
---
<!DOCTYPE HTML>
<html>
	<head>
		<title>Daniel Frederico Lins Leite</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="/css/main.css" />
		<noscript><link rel="stylesheet" href="/css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
		<div id="wrapper">
			<ScrollingBackground img="bg" />
			<div id="overlay"></div>
			<div id="main">
                <IndexHeader />
                <IndexFooter />
			</div>
		</div>
		<script>
			window.onload = function() { document.body.classList.remove('is-preload'); }
			window.ontouchmove = function() { return false; }
			window.onorientationchange = function() { document.body.scrollTop = 0; }
		</script>
	</body>
</html>