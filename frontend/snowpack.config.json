{
    "scripts": {
        "mount:index": "mount static --to /",
        "mount:fontawesome-webfonts": "mount node_modules/@fortawesome/fontawesome-free/webfonts --to /webfonts",
        "mount:fontawesome-css": "mount node_modules/@fortawesome/fontawesome-free/css --to /",
        "mount:magic.css": "mount node_modules/magic.css/dist --to /",
        "run:css": "postcss index.scss indx.css --dir static --ext css",
        "run:css::watch": "$1 --watch"
    },
    "devOptions": {
        "bundle": false
    }
}